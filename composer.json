{
    "name": "nofw/emperror",
    "description": "The Emperor takes care of all errors personally",
    "license": "MIT",
    "keywords": ["error", "handler"],
    "homepage": "https://nofw.io",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "nofw/error": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "php-mock/php-mock-phpunit": "^2.0",
        "filp/whoops": "^2.1",
        "nofw/error": "^0.1.1",
        "airbrake/phpbrake": "^0.2.3"
    },
    "autoload": {
        "psr-4": {
            "Nofw\\Emperror\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nofw\\Emperror\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
